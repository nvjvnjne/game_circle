<!--管理者ページ-->
<div class="container">
  <!--ページタイトル-->
  <div class="row mt-4 pl-3">
    <h4>ジャンル登録/一覧</h4>
  </div>

  <!--ジャンル登録-->
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <!--ジャンル名入力欄-->
      <div class="row mt-4">
        <label for="name" class="col-md-2 col-form label">ジャンル名</label>
        <div class="col-md-5">
          <%= f.text_field :name, class:"form-control", id:"name" %>
        </div>
      </div>

      <!--登録ボタン-->
      <div class="row mt-3">
        <%= f.submit "登録", class:"btn btn-success" %>
      </div>
    <% end %>

    <div class="row mt-4 pl-3">
      <h4>ジャンル一覧</h4>
    </div>

    <!--ジャンル一覧-->
    <div class="row mt-4">
      <table class="table">
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <th><%= genre.name %></th>
              <th><%= link_to "編集", edit_admin_genre_path(genre.id), class:"btn btn-primary" %></th>
              <th><%= link_to "削除", admin_genre_path(genre.id), method: :delete, "data-confirm" => "削除しますか？", class:"btn btn-danger" %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>