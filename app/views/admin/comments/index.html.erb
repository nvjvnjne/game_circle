<div class="container">
  <div class="row mt-4 pl-3">
    <h4>コメント一覧</h4>
  </div>

  <div class="row mt-3 d-flex justify-content-center">
    <table class="table">
      <thead>
        <tr>
          <th>コメントID</th>
          <th>ユーザー名</th>
          <th>コメント</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= comment.id %></td>
            <td>
              <% if comment.user.is_deleted == false %>
                <%= comment.user.nickname %>
              <% else %>
                <%= link_to "退会ユーザー", admin_user_path(comment.user_id) %>
              <% end %>
            </td>
            <td><%= comment.comment %></td>
            <td><%= link_to "詳細", admin_game_path(comment.game_id), class:"btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>