<!--管理者用ログイン-->
<div class="container">
  <!--タイトル-->
  <div class="row mt-5">
    <div class="col-md-3">
    </div>
    <div class="col-md-3">
      <h4>管理者ログイン</h4>
    </div>
  </div>
  <!--入力フォーム-->
  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <!--メールアドレス-->
    <div class="row mt-3 d-flex justify-content-center">
      <label for="email" class="col-md-2 col-form-label">メールアドレス</label>
      <div class="col-md-4">
        <%= f.email_field :email, autofocus: true, class:"form-control", id:"email" %>
      </div>
    </div>
    <!--パスワード-->
    <div class="row mt-3 d-flex justify-content-center">
      <label for="password" class="col-md-2 col-form-label">パスワード</label>
      <div class="col-md-4">
        <%= f.password_field :password, class:"form-control", id:"password" %>
      </div>
    </div>
    <!--ログイン-->
    <div class="row mt-3 d-flex justify-content-center">
      <%= f.submit "ログインする", class:"btn btn-secondary" %>
    </div>
  <% end %>
</div>