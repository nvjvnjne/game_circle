<!--ユーザーログイン画面-->
<% if flash[:notice] %>
  <div id="notice"><%= flash[:notice] %></div>
<% end %>
<div class="container">
  <div class="row mt-5">
  </div>
  <!--タイトル-->
  <div class="row mt-5">
    <div class="col-md-3">
    </div>
    <div class="col-md-2">
      <h4>ログイン</h4>
    </div>
  </div>

  <% if @user.errors.any? %>
    <div id="error expanation">
      <h5><%= @user.errors.count %>件のエラーが発生しました</h5>
      <ul class="alert alert-danger" role="alert">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!--入力フォーム-->
  <%= form_with model: @user, url: user_session_path do |f| %>
    <!--メールアドレス-->
    <div class="row mt-3 d-flex justify-content-center">
      <label for="email" class="col-md-2 col-form-label">メールアドレス</label>
      <div class="col-md-4">
        <%= f.email_field :email, autofocus: true, class:"form-control", id:"email" %>
      </div>
    </div>
    <!--パスワード-->
    <div class="row mt-3 d-flex justify-content-center">
      <label for="password" class="col-md-2 col-form-label">パスワード</label>
      <div class="col-md-4">
        <%= f.password_field :password, class:"form-control", id:"password" %>
      </div>
    </div>
    <!--ログイン-->
    <div class="row mt-3 d-flex justify-content-center">
      <%= f.submit "ログインする", class:"btn btn-success" %>
    </div>
  <% end %>
  <!--新規道路リンク-->
  <div class="row mt-5 d-flex justify-content-center">
    <p>新規登録の方は
    <%= link_to "こちら", new_user_registration_path %>
    </p>
  </div>
</div>