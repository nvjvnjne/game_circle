<!--フラッシュメッセージ-->
<div id="notice"><%= flash[:notice] %></div>

<div class="container">
  <div class="row mt-4 pl-3">
    <!--ページタイトル-->
    <div class="col-md-3">
      <h4>ゲーム詳細</h4>
    </div>
    <div class="col-md-7">
    </div>
    <!--削除ボタン-->
    <div class="col-md-2">
      <% if @user == current_user %>
        <%= link_to "削除する", game_path, method: :delete, "data-confirm" => "投稿を削除しますか？", class:"btn btn-danger" %>
      <% end %>
    </div>
  </div>

  <!--投稿ゲーム画像-->
  <div class="row mt-2 d-flex justify-content-center">
    <% if @game.largeImageUrl.present? %>
      <%= image_tag @game.largeImageUrl %>
    <% else %>
      <%= image_tag 'no_image', size: "200×200" %>
    <% end %>
  </div>

  <!--投稿主-->
  <div class="row mt-4 d-flex justify-content-center">
    <label class="col-md-2 col-form-label">投稿主</label>
    <div class="col-md-4 col-form-label">
      <%= link_to user_path(@user) do %>
        <%= @user.nickname %>
      <% end %>
    </div>
  </div>

  <!--タイトル-->
  <div class="row mt-2 d-flex justify-content-center">
    <label class="col-md-2 col-form-label">ゲームタイトル</label>
    <div class="col-md-4 col-form-label">
      <%= @game.title %>
    </div>
  </div>

  <!--プレイ状況-->
  <div class="row mt-2 d-flex justify-content-center">
    <label class="col-md-2 col-form-label">プレイ状況</label>
    <div class="col-md-4 col-form-label">
      <%= I18n.t("enums.game.play_condition." + @game.play_condition) %>
    </div>
  </div>

  <!--ジャンル-->
  <div class="row mt-2 d-flex justify-content-center">
    <label class="col-md-2 col-form-label">ジャンル</label>
    <div class="col-md-4 col-form-label">
      <%= I18n.t("enums.game.genre." + @game.genre) %>
    </div>
  </div>

  <!--つぶやき-->
  <div class="row mt-2 d-flex justify-content-center">
    <label class="col-md-2 col-form-label">つぶやき</label>
    <div class="col-md-4 col-form-label">
      <%= @game.opinion %>
    </div>
  </div>

  <!--戻る、編集ボタン-->
  <div class="row my-3 d-flex justify-content-center">
    <!--ユーザー詳細へ戻る-->
    <%= link_to "戻る", user_path(@user), class:"btn btn-primary" %>
    <!--ログインユーザーのみ編集ページへ遷移-->
    <% if @user == current_user %>
      <%= link_to "編集する", edit_game_path(@user), class:"btn btn-success ml-5" %>
    <% end %>

  </div>
</div>