<div class="container">

  <div class="row mt-2 pl-3">
    <p><%= @games.count %>件表示</p>
  </div>

  <div class="row mt-2 d-flex justify-content-center">
    <div class="table-responsible">
      <table class="table table-hover table-inverse">
        <tbody>
          <% @games.each do |game| %>
            <tr>
              <th><%= link_to (image_tag(game['smallImageUrl'])), game['itemUrl'] %></th>
              <th><%= game['title'] %></th>
              <th><%= game['hardware'] %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>