<div class="container">
  <div class="row mt-5">
  </div>
  <!--タイトル-->
  <div class="row mt-5">
    <div class="col-md-3">
    </div>
    <div class="col-md-2">
      <h4>新規登録</h4>
    </div>
  </div>
  <!--入力フォーム-->
  <%= form_with model: @user, url: user_registration_path do |f| %>
    <!--ニックネーム-->
    <div class="row mt-3 d-flex justify-content-center">
      <label for="nickname" class="col-md-3 col-form-label">名前(ニックネーム)</label>
      <div class="col-md-4">
        <%= f.text_field :nickname, autofocus: true, class:"form-control", id:"nickname" %>
      </div>
    </div>
    <!--メールアドレス-->
    <div class="row mt-3 d-flex justify-content-center">
      <label for="email" class="col-md-3 col-form-label">メールアドレス</label>
      <div class="col-md-4">
        <%= f.email_field :email, autocomplete: "email", class:"form-control", id:"email" %>
      </div>
    </div>
    <!--パスワード-->
    <div class="row mt-3 d-flex justify-content-center">
      <label for="password" class="col-md-3 col-form-label">パスワード(6文字以上)</label>
      <div class="col-md-4">
        <%= f.password_field :password, class:"form-control", id:"password" %>
      </div>
    </div>
    <!--パスワード(確認用)-->
    <div class="row mt-3 d-flex justify-content-center">
      <label for="password_confirmation" class="col-md-3 col-form-label">パスワード(確認用)</label>
      <div class="col-md-4">
        <%= f.password_field :password_confirmation, class:"form-control", id:"password_confirmation" %>
      </div>
    </div>
    <!--新規登録-->
    <div class="row mt-4 d-flex justify-content-center">
      <%= f.submit "新規登録する", class:"btn btn-success" %>
    </div>
  <% end %>

  <!--ログインリンク-->
  <div class="row mt-4 d-flex justify-content-center">
    <p>ログインの方は
    <%= link_to "こちら", new_user_session_path %>
    </p>
  </div>
</div>


